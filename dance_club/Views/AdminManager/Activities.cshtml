@model IEnumerable<dance_club.Models.Activities>

<div class="row">
    <div class="col align-self-center">
        <div class="list-group">
            <a href="/AdminManager/Activities/" class="list-group-item list-group-item-action active">Zajęcia</a>

            <a href="/AdminManager/Caterogies/" class="list-group-item list-group-item-action"> Kategorie zajęć</a>

            <a href="/AdminManager/Employees/" class="list-group-item list-group-item-action"> Pracownicy</a>


        </div>
    </div>
    <div class="col-8">
        <h2>Zajęcia</h2>

        <p>
            @Html.ActionLink("Dodaj nowe", "Create", "Activities", null, new { @class = "btn btn-success" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Categories.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Act_Start)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Act_End)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                
                <th></th>
            </tr>

            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categories.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employees.Name) @Html.DisplayFor(modelItem => item.Employees.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Act_Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Act_End)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Edytuj", "Edit", "Activities", new { id = item.ActivityID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Opis", "Details", "Activities", new { id = item.ActivityID }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Usuń", "Delete", "Activities", new { id = item.ActivityID }, new { @class = "btn btn-danger" })
                    </div>
                </td>

            </tr>
    }

        </table>
    </div>
</div>