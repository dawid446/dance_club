@model IEnumerable<dance_club.Models.Employees>

@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hire_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birth_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hire_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birth_date)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", "Employees", new { id=item.EmployeeID }, new { @class="btn btn-success" }) |
            @Html.ActionLink("Opis", "Details", "Employees", new { id=item.EmployeeID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Usuń", "Delete", "Employees", new { id=item.EmployeeID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
